<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fy071.floatingwidget">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".component.activity.MainActivity"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".component.activity.ReminderConfigActivity"
            android:launchMode="singleInstance" />

        <service
            android:name=".component.service.FloatingViewService"
            android:enabled="true" />

        <receiver
            android:name=".component.broadcastreceiver.OpenBroadcastReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".component.broadcastreceiver.WeChatMessageReceiver"
            android:enabled="true" />

        <service
            android:name=".component.service.WeChatNotificationListenerService"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

        <service
            android:name=".component.service.RandomDialogService"
            android:enabled="true" />

        <activity
            android:name=".component.activity.SettingsActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".component.activity.PairingActivity"
            android:launchMode="singleInstance" />
        <activity android:name=".component.activity.BaseActivity" />

        <service
            android:name=".component.service.NotificationListenerMonitorService"
            android:enabled="true"
            android:exported="false" />

        <activity android:name=".component.activity.ConnectedActivity"></activity>
    </application>

</manifest>