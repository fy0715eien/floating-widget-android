<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Widget">

        <SwitchPreference
            android:defaultValue="false"
            android:key="enable_widget"
            android:title="Enable widget" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Pet profile">

        <EditTextPreference
            android:defaultValue="Default value"
            android:key="edit_text_preference_pet_name"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Set the name of your pet"
            android:title="Name" />
        <EditTextPreference
            android:defaultValue="Default value"
            android:key="edit_text_preference_user_name"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="How your pet would call you"
            android:title="User name" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Pet functions">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="check_box_preference_notification"
            android:summary="Show popup when receiving WeChat notification"
            android:title="WeChat notification" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="check_box_preference_start_at_boot"
            android:title="Start widget at boot" />
    </PreferenceCategory>
</PreferenceScreen>